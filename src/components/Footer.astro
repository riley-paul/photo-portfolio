---
import { cn } from "@/lib/utils";
import { buttonVariants } from "./ui/button";
import { contacts } from "@/config/contact";
---

<div
  class="w-full flex flex-col gap-8 flex-wrap items-center justify-center pb-8 pt-12 sm:pt-28 mt-auto"
  id="contact"
>
  <slot />

  <div class="flex flex-col gap-2 items-center">
    <div>
      {
        contacts.map((i) => (
          <a
            href={i.link}
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-link link-hover underline-offset-4 opacity-50 font-thin"
          >
            {i.name}
          </a>
        ))
      }
    </div>
    <div class="text-muted-foreground text-xs font-thin">
      &copy; {new Date().getFullYear()} Riley Paul
    </div>
  </div>
</div>
