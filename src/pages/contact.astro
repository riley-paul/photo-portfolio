---
import RootLayout from "@/layouts/root-layout.astro";
import { contacts } from "@/lib/config";
---

<RootLayout title="Contact">
  <h1 class="text-2xl font-bold">Get in touch</h1>
  <article class="flex flex-col md:flex-row w-full gap-4">
    <form
      action="https://contact-me-api.pages.dev/contact"
      method="POST"
      class="grid gap-4 w-full"
    >
      <input
        type="hidden"
        name="access_key"
        value="b04575df-6ca6-4923-ab46-ce13d5f16845"
      />
      <fieldset class="fieldset">
        <legend class="fieldset-legend">Name</legend>
        <input type="text" class="input w-full" name="name" required />
      </fieldset>
      <fieldset class="fieldset">
        <legend class="fieldset-legend">Email</legend>
        <input type="email" name="email" class="input w-full" required />
      </fieldset>
      <fieldset class="fieldset">
        <legend class="fieldset-legend">Message</legend>
        <textarea name="message" class="textarea w-full" required></textarea>
      </fieldset>
      <button class="btn" type="submit">Submit Form</button>
    </form>
    <div class="divider md:divider-horizontal">or</div>
    <section
      class="flex flex-col gap-3 h-full items-center justify-center min-w-xs"
    >
      {
        contacts.map(({ link, name, icon: Icon }) => (
          <a
            href={link}
            target="_blank"
            rel="noopener noreferrer"
            class="btn w-full btn-primary btn-soft"
          >
            <Icon className="size-4" />
            {name}
          </a>
        ))
      }
    </section>
  </article>
</RootLayout>
